---
const {title = "PlaceHolderHere's Website", navbarButtons = [["Home", "/"], , ["Contacts", "/contacts"]]} = Astro.props //[[Button Text, Button Link]]
---

<div class="flex bg-accent-color min-w-full min-h-20 items-center justify-between fixed top-0 shadow-3xl">
    <h1 class="text-white text-xl p-1 m-6">{title}</h1>
    <div class="buttons flex justify-end items-center">
        {
            navbarButtons.map(button =>(
                <a class="button" href={button[1]}>{button[0]}</a>
            ))
        }
    </div>
</div>

<style>
    .button{
        @apply text-white bg-button-color inline-block p-2 my-2 mr-6 rounded-md text-right hover:bg-button-hover-color hover:cursor-pointer
    }
</style>